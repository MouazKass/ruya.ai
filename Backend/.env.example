APP_NAME=SENTINEL Backend
ENV=dev
LOG_LEVEL=INFO
HOST=0.0.0.0
PORT=8000

API_PREFIX=/api
CORS_ORIGINS=*

CLICKHOUSE_HOST=clickhouse
CLICKHOUSE_PORT=8123
CLICKHOUSE_USERNAME=default
CLICKHOUSE_PASSWORD=
CLICKHOUSE_DATABASE=sentinel
CLICKHOUSE_SECURE=false

AWS_REGION=us-west-2
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_SESSION_TOKEN=

USE_BEDROCK=false
BEDROCK_CHAT_MODEL_ID=anthropic.claude-opus-4-5-20251101-v1:0
BEDROCK_MAX_TOKENS=4096

# Per-agent model overrides (leave blank to use BEDROCK_CHAT_MODEL_ID)
BEDROCK_INGEST_MODEL_ID=
BEDROCK_GENOMICS_MODEL_ID=
BEDROCK_EPI_OSINT_MODEL_ID=
BEDROCK_META_MODEL_ID=

USE_BEDROCK_EMBEDDINGS=false
BEDROCK_EMBEDDING_MODEL_ID=amazon.titan-embed-text-v2:0
EMBEDDING_DIM=1024

USE_RERANK=false
BEDROCK_RERANK_MODEL_ID=cohere.rerank-v3-5:0

DISPATCH_DRY_RUN=true
RUN_DEFAULT_CASES=20
RAG_TOP_K=3
MAX_VECTOR_SCAN=500

GUARDRAIL_SEVERITY_THRESHOLD=7.0
GUARDRAIL_CONFIDENCE_THRESHOLD_PCT=60.0

OUTBREAK_DATA_PATH=data/outbreaks.jsonl
